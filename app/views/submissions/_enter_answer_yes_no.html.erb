<div class="form-inline">
  <% if @answers and @answers[index]
     value = @answers[index]["main"].capitalize
     end %>
  <input type="hidden" name="answers[<%= index %>][main]" id="answer_<%= index %>" <% if value %>value="<%= value %>"<% end %>>
  <button type="button" class="answer btn btn-default <%= if value == 'Yes' then 'active' end %>"
          data-id="answer_<%= index %>">Yes</button>
  <button type="button" class="answer btn btn-default <%= if value == 'No' then 'active' end %>"
          data-id="answer_<%= index %>">No</button>
</div>

