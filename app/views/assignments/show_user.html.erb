<% @page_title = "#{@course.name} / #{@assignment.name} / Submissions for #{@user.display_name}" %>

<div class="row">
  <div class="col-md-6">
    <p>
      <b>Name:</b>
      <%= @assignment.name %>
    </p>

    <p>
      <b>Bucket:</b>
      <%= @assignment.bucket.name %>
    </p>
    <p>
      <b>Due Date:</b>
      <%= @assignment.due_date %>
    </p>
    <p>
      <b>Grading Hidden:</b>
      <%= @assignment.hide_grading? ? "Yes" : "No" %>
    </p>
    <p>
      <b>Teams:</b>
      <%= @assignment.team_subs? ? "Yes" : "No" %>
    </p>
    <% unless @assignment.assignment_file_name.blank? %>
      <p>
        <b>Assignment Download:</b>
        <%= link_to @assignment.assignment_file_name, @assignment.assignment_file_path %>
      </p>
    <% end %>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Description</h3>
      </div>
      <div class="panel-body">
        <div class="prose">
          <%= raw @assignment.assignment %>
        </div>
      </div>
    </div>
  </div>
</div>

<h3>
  Submissions
</h3>
<% if @submissions.empty? %>
  <div class="well">
    No submissions yet.
  </div>
<% else %>
  <table class="table table-striped">
    <tr>
      <th>Status</th>
      <th>Submitter</th>
      <th>Team</th>
      <th>Date</th>
      <th>Status</th>
      <th>Automatic</th>
      <th>Teacher</th>
      <th>Score</th>
      <th>Action</th>
    </tr>

  <% @submissions.each do |sub| %>
    <% best = (@assignment.best_sub_for(@user).id == sub.id) %>
    <% if sub.stale_team? %>
    <tr class='muted'>
    <% elsif best %>
    <tr class='success'>
    <% else %>
    <tr>
    <% end %>
      <td>
        <% if sub.stale_team? %>
        <span class="glyphicon glyphicon-alert" 
              title="Team was disolved before homework was due"></span>
        <% elsif best %>
        <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </td>
      <td><%= sub.user.name %></td>
      <td><%= sub.team %></td>
      <td><span class="local-time"><%= sub.created_at %></span></td>
      <td><%= status_image(sub) %></td>
      <td><%= sub.auto_score || 'âˆ…' %>&nbsp;/&nbsp;<%= @assignment.points_available %></td>
      <td><%= show_score(sub.teacher_score) %>&nbsp;/&nbsp;<%= @assignment.points_available %></td>
      <td><%= show_score(sub.score) %>&nbsp;/&nbsp;<%= @assignment.points_available %></td>
      <td>
        <form method="link"
              action="<%= course_assignment_submission_path(@course, @assignment, sub) %>">
          <div class="btn-group">
            <button type="submit" class="btn btn-sm">View</button>
            <button type="button" class="btn btn-sm dropdown-toggle"
                    data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to "View", 
                      course_assignment_submission_path(@course, @assignment, sub), 
                      class: "dropdown-item" %></li>
              <li><%= link_to "Use for grading", 
                      "#",
                      class: "dropdown-item" %></li>
            </ul>
          </div>        
        </form>
      </td>
    </tr>
  <% end %>

  </table>
<% end %>
