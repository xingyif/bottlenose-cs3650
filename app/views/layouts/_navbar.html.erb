<div class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("dolphin.svg", height: 40, class: 'navbar-brand'), root_path %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Courses", courses_path %></li>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <% if current_user.site_admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Terms", terms_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Settings", edit_settings_path %></li>
            </ul>
          </li>
        <% end %>

        <% if current_user && current_user.site_admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Site Admin <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Settings", edit_settings_path %></li>
            </ul>
          </li>
        <% end %>
        <% if true_user != current_user %>
          <li><%= link_to "Stop Impersonating", stop_impersonating_users_path, method: :post %></li>
        <% end %>
        <% if current_user %>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <% if current_user && current_user.site_admin? %>
    <!-- Site Admin Bar (currently just for a visual que) -->
    <div style="height: 2px; background-color: #222;"></div>
  <% end %>
</div>
