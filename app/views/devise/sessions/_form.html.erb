<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="text-center">
  <p>
    Login with your CCS LDAP email, and password.
  </p>

  <div style="width: 20em; margin-left: auto; margin-right: auto;" class="text-left">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if false # TODO: devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div>
      <%= f.submit "Log in" %>
    </div>
  </div>
</div>
<% end %>
