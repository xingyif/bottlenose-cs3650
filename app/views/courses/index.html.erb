<% @page_title = "Courses" %>

<div class="page-header">
  <h1>Courses</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <% @courses_by_term.each do |term, courses| %>
      <h2><%= term.name %></h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% courses.each do |course| %>
            <% registration = current_user.registration_for(course) %>
            <tr>
              <td><%= link_to course.name, course_path(course) %></td>
              <% if registration %>
                <td><span class="label label-default pull-right"><%= registration.role.titleize %></span></td>
              <% else %>
                <% if current_user.reg_requests.map { |r| r.course }.include?(course) %>
                  <td><span class="btn btn-success btn-xs disabled pull-right">Registration Pending...</span></td>
                <% else %>
                  <td><%= link_to "Request Registration", new_course_reg_request_path(course), class: "btn btn-success btn-xs pull-right" %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
  </div>
</div>
