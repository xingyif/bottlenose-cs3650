<% @page_title = "Course: #{@course.name}" %>

<div class="page-header">
  <h1><%= @course.name %></h1>

  <div class="actions">
    <%= link_to "Registrations", staff_course_registrations_path(@course), class: "btn btn-default" %>
    <%= link_to "Teams", staff_course_teams_path(@course), class: "btn btn-default" %>
    <%= link_to "Settings", edit_staff_course_path(@course), class: "btn btn-default" %>
  </div>
</div>

<%#= link_to "View Registration Requests (#{@req_count})", course_reg_requests_path(@course) %>
<%#= link_to 'Grade Buckets', course_buckets_path(@course) %>

<% @course.buckets_sorted.each do |bb| %>
  <h3>
    <%= bb.name %>

    <div class="actions">
      <%#= link_to %Q{Edit Bucket "#{bb.name}"}, edit_course_bucket_path(@course, bb) %>
      <%= link_to "New #{bb.name.singularize}", new_staff_course_assignment_path(@course, bucket: bb.id), class: "btn btn-success" %>
    </div>
  </h3>

  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Due Date</th>
    </thead>
    <tbody>
    <% bb.assignments.order(:name).each do |aa| %>
      <tr>
        <td><%= link_to aa.name, staff_course_assignment_path(@course, aa) %></td>
        <td><%= aa.due_date %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>


<h3>Students</h3>

<table class="table table-striped" id="students-summary">
  <tr>
    <th>Name</th>
    <% @buckets.each do |bb| %>
      <th><%= bb.name %></th>
    <% end %>
    <th>Total</th>
    <th>Status Report</th>
  </tr>

<% @active_regs.each do |reg| %>
  <tr data-tags="<%= reg.tags %>">
    <td><%= reg.user.name %><br>
      <%= reg.user.email %></td>
    <% @buckets.each do |bb| %>
      <td><%= @scores[reg.user_id][bb.id].round %>%</td>
    <% end %>
    <td class="score-total"><%= @totals[reg.user_id].round  %>%</td>
    <td><%#= link_to "View", reg %></td>
  </tr>
<% end %>

</table>


<% if false %>
<h3>Data Export</h3>

<p><%= link_to("Get CSV for Assignment Grades", staff_course_path(@course) + '/export_grades', method: 'post') %></p>
<p><%= link_to("Get Summary CSV", staff_course_path(@course) + '/export_summary', method: 'post') %></p>
<% end %>
