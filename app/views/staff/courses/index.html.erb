<% @page_title = "Courses" %>

<div class="page-header">
  <h1>Courses</h1>

  <div class="actions">
    <%= link_to "Terms", staff_terms_path, class: "btn btn-default" %>
    <%= link_to "New Course", new_staff_course_path, class: "btn btn-success" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% @courses_by_term.each do |term, courses| %>
      <h2><%= term.name %></h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% courses.each do |course| %>
            <tr>
              <td><%= link_to course.name, staff_course_path(course) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
  </div>
</div>
