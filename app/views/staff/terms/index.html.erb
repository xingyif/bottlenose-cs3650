<% @page_title = "Terms" %>

<div class="page-header">
  <h1>Terms</h1>

  <div class="actions">
    <%= link_to "New Term", new_staff_term_path, class: "btn btn-success" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Archived</th>
        </tr>
      </thead>
      <% @terms.each do |term| %>
        <tr>
          <td><%= link_to term.name, staff_term_path(term) %></td>
          <td style="text-align: center"><%= term.archived? ? "archived" : "active" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
